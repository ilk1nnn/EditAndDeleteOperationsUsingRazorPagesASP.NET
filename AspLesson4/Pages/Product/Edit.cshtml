@page
@model AspLesson4.Pages.Product.EditModel
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form class="col-5" method="post">
	<div class="mb-3">
		<label class="form-label">Product Name</label>
		<input asp-for="Product.Name" type="text" class="form-control">
	</div>
	<div class="mb-3">
		<label class="form-label">Product Price</label>
		<input asp-for="Product.Price" type="number" class="form-control">
	</div>

	<button type="submit" asp-page-handler="Edit" class="btn btn-primary">EDIT</button>
</form>